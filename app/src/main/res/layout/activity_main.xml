<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="leeyr41.favoritepet.MainActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/msg_title"
    android:textSize="30sp"

    />
    <CheckBox
        android:id="@+id/check_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_lbl"
        android:textSize="30sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_quest"
        android:textSize="30sp"
        android:visibility="invisible"
        />
    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        >
        <RadioButton
            android:id="@+id/radio_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pet_cat"
            />
        <RadioButton
            android:id="@+id/radio_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pet_g"
            />
        <RadioButton
            android:id="@+id/radio_pig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pet_pig"
            />

    </RadioGroup>
   <Button
       android:id="@+id/but_ok"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/but_lbl"
       android:visibility="invisible"
       />
       <ImageView
           android:id="@+id/imgv_pet"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:src="@drawable/cat"
           />
</LinearLayout>
